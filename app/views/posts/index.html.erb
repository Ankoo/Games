<h1>Recenzje gry</h1>
<div id='posts_table'>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Tytuł</th>
        <th>Gra</th>
        <th colspan="3">Opcje</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class='nowrap'><%= post.title %></td>
          <td><%=link_to post.game.title, game_path(@game) %></td>
          <td><%= link_to 'Wyświetl ', game_post_path(@game, post), class:'btn btn-default btn-sm' %></td>
          <%if can? :update, post%>
            <td><%= link_to 'Edytuj ', edit_game_post_path(@game, post), class:'btn btn-warning btn-sm' %></td>
            <%if can? :manage, post%>
              <td><%= link_to 'Usuń', game_post_path(@game, post), method: :delete, data: { confirm: 'Jesteś pewien?' }, class:'btn btn-danger btn-sm' %></td>
            <%end%>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>
</div>